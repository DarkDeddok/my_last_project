# Default values for openiam.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.

ingress:
  enabled: false
openiam:
  vault:
    volume:
      seal:
        annotations: []
        size: '10M'
        accessModes:
        - ReadWriteMany
        storageClass: 'ocs-storagecluster-cephfs'
      client:
        annotations: []
        size: '10M'
        accessModes:
        - ReadWriteMany
        storageClass: 'ocs-storagecluster-cephfs'
      server:
        annotations: []
        size: '10M'
        accessModes:
        - ReadWriteMany
        storageClass: 'ocs-storagecluster-cephfs'
      storage:
        annotations: []
        size: '1Gi'
        accessModes:
        - ReadWriteMany
        storageClass: 'ocs-storagecluster-cephfs'
  groovy_manager:
    volume:
      iamscripts:
        annotations: []
        size: '10M'
        accessModes:
        - ReadWriteMany
        storageClass: 'ocs-storagecluster-cephfs'
  workflow:
    volume:
      activiti:
        annotations: []
        size: '5M'
        accessModes:
        - ReadWriteMany
        storageClass: 'ocs-storagecluster-cephfs'
  ldap_connector_rabbitmq:
    volume:
      ldap_connector_rabbitmq:
        annotations: []
        size: '5M'
        accessModes:
        - ReadWriteMany
        storageClass: 'ocs-storagecluster-cephfs'
  rabbitmq:
    volume:
      annotations: []
      size: '5M'
      accessModes:
      - ReadWriteMany
      storageClass: 'ocs-storagecluster-cephfs'
  upload:
    volume:
      annotations: [ ]
      size: '2Gi'
      accessModes:
        - ReadWriteMany
      storageClass: 'ocs-storagecluster-cephfs'